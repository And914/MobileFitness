<resources>

    <!-- Base application theme. -->
    <!--<style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar"> -->
    <style name="AppTheme" parent="Theme.AppCompat.Light">
        <!-- Customize your theme here. -->
        <item name="colorPrimaryDark">@color/myPrimaryDarkColor</item>
        <item name="colorPrimary">@color/myPrimaryColor</item>
        <item name="android:textColorPrimary">#FFF</item>
        <item name="android:textColor">@color/background_floating_material_dark</item>
        <item name="android:editTextColor">#000</item>
    </style>

    <style name="Title" parent="Theme.AppCompat.Light">
        <item name="android:textSize">30sp</item>
        <item name="android:textStyle">bold</item>
    </style>
    <style name="PhraseHome" parent="Theme.AppCompat.Light">
        <item name="android:textColor">@color/background_floating_material_dark</item>
        <item name="android:textStyle">italic</item>
    </style>

    <style name="Button">
        <item name="android:background">@color/myPrimaryColor</item>
        <item name="android:textColor">#fff</item>
        <item name="android:textStyle">bold</item>
    </style>
    <style name="TextCard" parent="Theme.AppCompat.Light">
        <item name="android:textColor">#000</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="TextProfile" parent="Theme.AppCompat.Light">
        <item name="android:textColor">@color/background_floating_material_dark</item>
        <item name="android:textSize">20sp</item>
        <item name="android:padding">20dp</item>
    </style>

    <style name="Divider">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_gravity">center</item>
        <item name="android:layout_height">1dp</item>
        <item name="android:layout_marginRight">10dp</item>
        <item name="android:layout_marginLeft">10dp</item>
        <item name="android:background">@color/myPrimaryColor</item>
    </style>

    <style name="DividerHorizontalExerciseInfo">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_gravity">center</item>
        <item name="android:layout_height">1dp</item>

        <item name="android:background">#000</item>
    </style>

    <style name="DividerVerticalExerciseInfo">
        <item name="android:layout_width">1dp</item>
        <item name="android:layout_gravity">center_horizontal</item>
        <item name="android:layout_height">wrap_content</item>

        <item name="android:background">#000</item>
    </style>

</resources>
