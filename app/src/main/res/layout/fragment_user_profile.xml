<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:scrollbars="vertical">
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
            android:orientation="vertical" android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:scrollbars="vertical">

            <ImageView
                android:layout_width="300dp"
                android:layout_height="300dp"
                android:id="@+id/img_profile"
                android:layout_marginTop="16dp"
                android:layout_gravity="center"
                />


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="wrap_content"
                    android:theme="@style/TextProfile"
                    android:text="Email" />

                <TextView
                    android:layout_width="0dp"
                    android:layout_weight="3"
                    android:layout_height="wrap_content"
                    android:theme="@style/TextProfile"
                    android:id="@+id/user_email" />
             </LinearLayout>


            <View style="@style/Divider"/>

            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <TextView

                    android:layout_width="0dp"
                    android:layout_weight="3"
                    android:layout_height="wrap_content"
                    android:theme="@style/TextProfile"
                    android:text="Name "
                    android:linksClickable="false"
                    android:singleLine="false" />

                <TextView
                    android:layout_width="0dp"
                    android:layout_weight="3"
                    android:layout_height="wrap_content"
                    android:theme="@style/TextProfile"
                    android:text="Nome"
                    android:id="@+id/user_name"
                    android:linksClickable="false"
                    android:singleLine="false" />
                <FrameLayout
                    android:layout_width="50dp"
                    android:layout_height="50dp"
                    android:layout_gravity="center_vertical"
                    android:layout_marginRight="10dp"
                    android:layout_marginEnd="10dp"
                    android:padding="5dp">

                    <ImageButton
                        android:layout_width="wrap_content"
                        android:scaleType="fitCenter"
                        android:id="@+id/user_name_imagebtn"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_horizontal"/>

                </FrameLayout>
            </LinearLayout>

            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <TextView
                    android:layout_width="0dp"
                    android:layout_weight="3"
                    android:layout_height="wrap_content"
                    android:theme="@style/TextProfile"
                    android:text="Surname" />

                <TextView
                    android:layout_width="0dp"
                    android:layout_weight="3"
                    android:layout_height="wrap_content"
                    android:theme="@style/TextProfile"
                    android:id="@+id/user_surname" />

                <FrameLayout
                    android:layout_width="50dp"
                    android:layout_height="50dp"
                    android:layout_gravity="center_vertical"
                    android:layout_marginRight="10dp"
                    android:layout_marginEnd="10dp"
                    android:padding="5dp">

                    <ImageButton
                        android:scaleType="fitCenter"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:id="@+id/user_surname_imagebtn"
                        android:layout_gravity="center_horizontal" />
                </FrameLayout>
            </LinearLayout>

            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="match_parent" >

                <TextView
                    android:layout_width="0dp"
                    android:layout_weight="3"
                    android:layout_height="wrap_content"
                    android:theme="@style/TextProfile"
                    android:text="Birth Date" />

                <TextView
                    android:layout_width="0dp"
                    android:layout_weight="3"
                    android:layout_height="wrap_content"
                    android:theme="@style/TextProfile"
                    android:text="New Text"
                    android:id="@+id/user_birth_date" />

                <FrameLayout
                    android:layout_width="50dp"
                    android:layout_height="50dp"
                    android:layout_gravity="center_vertical"
                    android:layout_marginRight="10dp"
                    android:layout_marginEnd="10dp"
                    android:padding="5dp">
                    <ImageButton
                        android:scaleType="fitCenter"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:id="@+id/user_birth_date_imagebtn"
                        android:layout_gravity="center_horizontal" />
                </FrameLayout>
            </LinearLayout>

            <View style="@style/Divider"/>

            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="match_parent" >

                <TextView
                    android:layout_width="0dp"
                    android:layout_weight="3"
                    android:layout_height="wrap_content"
                    android:theme="@style/TextProfile"
                    android:text="Height" />

                <TextView
                    android:layout_width="0dp"
                    android:layout_weight="3"
                    android:layout_height="wrap_content"
                    android:theme="@style/TextProfile"
                    android:text="New Text"
                    android:id="@+id/user_height"
                    android:singleLine="false"
                    />
                <FrameLayout
                    android:layout_width="50dp"
                    android:layout_height="50dp"
                    android:layout_gravity="center_vertical"
                    android:layout_marginRight="10dp"
                    android:layout_marginEnd="10dp"
                    android:padding="5dp">
                    <ImageButton
                        android:scaleType="fitCenter"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:id="@+id/user_height_imagebtn"
                        android:layout_gravity="center_horizontal" />
                </FrameLayout>
            </LinearLayout>

            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="match_parent" >

                <TextView
                    android:layout_width="0dp"
                    android:layout_weight="3"
                    android:layout_height="wrap_content"
                    android:theme="@style/TextProfile"
                    android:text="Weight" />

                <TextView
                    android:layout_width="0dp"
                    android:layout_weight="3"
                    android:layout_height="wrap_content"
                    android:theme="@style/TextProfile"
                    android:text="New Text"
                    android:id="@+id/user_weight" />
                <FrameLayout
                    android:layout_width="50dp"
                    android:layout_height="50dp"
                    android:layout_gravity="center_vertical"
                    android:layout_marginRight="10dp"
                    android:layout_marginEnd="10dp"
                    android:padding="5dp">
                    <ImageButton
                        android:scaleType="fitCenter"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:id="@+id/user_weight_imagebtn"
                        android:layout_gravity="center_horizontal" />
                </FrameLayout>
            </LinearLayout>

        </LinearLayout>
    </ScrollView>
</LinearLayout>